@model EditNoteViewModel

@{
    ViewData["Title"] = "Редактировать заметку";
}

<h1>Редактировать</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group mt-4">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>


    <div class="form-group mt-4">
        <label>Измените тег(и)</label>
        <select asp-for="SelectedTagIds"
                class="selectpicker form-control"
                multiple
                data-live-search="true"
                asp-items="@ViewBag.Tags">
        </select>
    </div>


    <div class="form-group mt-4">
        <label asp-for="Content"></label>
        <textarea asp-for="Content" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary m-lg-4">Сохранить</button>

    <a asp-action="Index">Назад к списку</a>



</form>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/css/bootstrap-select.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/js/bootstrap-select.min.js"></script>

    <script>
        $(document).ready(function () {
            $('.selectpicker').selectpicker();
            
        });
    </script>
}

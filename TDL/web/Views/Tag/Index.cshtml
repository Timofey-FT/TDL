@model IEnumerable<Domain.Entities.Tag>

@{
    ViewData["Title"] = "Список тегов";
}

<h2>@ViewData["Title"]</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Создать тег</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Название</th>
            <th>Заметка (ID)</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tag in Model)
        {
            <tr>
                <td>@tag.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@tag.Id" class="btn btn-sm btn-warning">Изменить</a>
                    <a asp-action="Delete" asp-route-id="@tag.Id" class="btn btn-sm btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
